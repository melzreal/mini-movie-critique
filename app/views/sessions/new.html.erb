    
<h1>Login </h1>

<%= form_for(@user, url:login_path) do |f| %>
	<%= f.label :name, 'Your name:' %><br>
	<select name="user[name]" id="user_name">
	    <% User.all.each do |u| %>
	        <option value="<%= u.name %>"><%= u.name %></option>
	    <% end %>
	</select>
	<br>
	<br>
	<%= password_field_tag(:password) %>
	<%= f.submit 'Sign In'%>
<% end %> <br>


<%= link_to('Log in with Facebook!', '/auth/facebook') %> <br>


<%= link_to('Log in with Google!', '/auth/google_oauth2') %>



<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>