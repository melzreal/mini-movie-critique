<h1>Sign Up</h1>
<%= form_for @user do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :username, 'Choose a username' %><br>
	<%= f.text_field :username %><br><br>

   <%= f.label :password, 'Choose a password:' %> <br>
	<%= f.password_field :password %> <br>

	<%= f.submit 'Create User'%>

	<% end %>