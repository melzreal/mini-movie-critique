<h1>Sign Up</h1>
<%= form_for @user do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :username, 'Choose a username' %><br>
	<%= f.text_field :username %><br><br>

   <%= f.label :password, 'Choose a password:' %> <br>
	<%= f.password_field :password %> <br>

	<%= f.submit 'Create User'%>

	<% end %> <br>

<h3><p> Alternatively you can also: </p></h3>

<h3> <%= link_to('Sign up with Facebook', '/auth/facebook') %> <br></h3>


<h3><%= link_to('Sign up with Google', '/auth/google_oauth2') %></h3>
